{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "jsx": "preserve",
        "lib": ["dom", "esnext"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "jsxImportSource": "@emotion/react"
    },
    "include": ["src/components", "src/templates", "src/typescript/*"],
    "exclude": ["node_modules", "public", ".cache"]
}
