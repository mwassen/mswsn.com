{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "jsx": "preserve",
        "lib": ["dom", "esnext"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "jsxImportSource": "@emotion/react"
    },

    "include": [
        "src/components",
        "src/typescript/custom.d.ts",
        "src/typescript/emotion.d.ts"
    ],
    "exclude": ["node_modules", "public", ".cache"]
}
